{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build All C Files (GCC)",
            "type": "shell",
            "command": "C:\\MinGW\\bin\\gcc.EXE", // Garanta que este caminho está correto
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                // AQUI ESTÁ O PONTO CHAVE: LISTE TODOS OS SEUS ARQUIVOS .C!
                "${workspaceFolder}\\main.c",
                "${workspaceFolder}\\jogo.c",
                "${workspaceFolder}\\buscaSequencialJogo.c",
                "${workspaceFolder}\\buscaBinariaJogo.c",
                "${workspaceFolder}\\mergeSortExternoJogo.c",
                "-o",
                "${workspaceFolder}\\output\\main.exe",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}