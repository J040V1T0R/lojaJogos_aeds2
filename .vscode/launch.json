{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            // **CORRIJA ESTE CAMINHO DO PROGRAMA.** Deve ser para a pasta 'output'.
            "program": "${workspaceFolder}\\output\\main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}\\output", // O diretório de trabalho deve ser onde o .exe está
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\MinGW\\bin\\gdb.exe", // **VERIFIQUE E AJUSTE** para o caminho EXATO do seu GDB
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // **CRUCIAL:** Garante que a sua tarefa de build personalizada é executada antes!
            "preLaunchTask": "Build All C Files (GCC)" // O 'label' da sua tarefa de build em tasks.json
        }
    ]
}